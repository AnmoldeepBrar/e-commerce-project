<article class="product">
  <header>
    <%= link_to product do %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>

  <%= image_tag(product.image.url, class: "product-image") if product.image.present? %>
  
  <p class="description">
    <%= product.description %>
  </p>
  <footer class="actions">
  </footer>

  <aside class="price">
    <%= product.price %>
  </aside>
</article>
